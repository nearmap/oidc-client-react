{
  "name": "react-oidc",
  "version": "0.1.0",
  "description": "A react wrapper for oidc-client",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./build",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:md": "remark -i .gitignore --no-stdout --use remark-lint *.md",
    "jest": "jest --runInBand --no-cache --verbose --config ./jest.config.json",
    "lint": "run-s -s lint:*",
    "clean-build": "run-s clean build",
    "build": "run-s build:* pkg:*",
    "build:lib": "babel -s --out-dir build/pkg src",
    "pkg:pkg": "cp package.json build/pkg/",
    "pkg:html": "cp src/silent_renew.html build/pkg/",
    "pkg:docs": "cp README.md build/pkg/",
    "test": "run-s -s lint jest",
    "preci": "npm --loglevel=warn install",
    "ci": "run-s -s clean test build package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearmap/react-oidc.git"
  },
  "keywords": [
    "react",
    "redux",
    "oidc-client",
    "OpenId-Connect"
  ],
  "author": "Jan Klaas Kollhof <jan@kollhof.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nearmap/react-oidc/issues"
  },
  "homepage": "https://github.com/nearmap/react-oidc#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "enzyme": "^2.9.1",
    "eslint": "^4.4.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-react": "^7.2.1",
    "jest": "^20.0.4",
    "jwt-decode": "^2.2.0",
    "npm-run-all": "^4.0.2",
    "react-test-renderer": "^15.6.1",
    "remark-cli": "^4.0.0",
    "remark-lint": "^6.0.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "prop-types": "^15.5.10"
  },
  "dependencies": {
    "oidc-client": "^1.3.0"
  },
  "peerDependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "prop-types": "^15.5.10"
  }
}
